{
  "schemaVersion": 1,
  "id": "experiencebottler",
  "version": "${version}",
  "name": "Experience Bottler",
  "description": "Add a block that can be used to bottle any quantity of experience points. The bottled experience points can be drunk like a potion, giving the experience points to user.",
  "authors": [
    "EideeHi"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/experience-bottler",
    "issues": "https://github.com/eideehi/mc-experiencebottler/issues",
    "sources": "https://github.com/eideehi/mc-experiencebottler"
  },
  "license": "MIT",
  "icon": "assets/experiencebottler/icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "net.eidee.minecraft.experiencebottler.core.init.ModInitializer::initClient"
    ],
    "main": [
      "net.eidee.minecraft.experiencebottler.core.init.ModInitializer::init"
    ]
  },
  "depends": {
    "fabric": "*",
    "fabricloader": ">=${loader_version}",
    "fabric-api": ">=${fabric_version}",
    "minecraft": ">=${minecraft_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/DDQqxkK7s6"
      }
    }
  }
}
